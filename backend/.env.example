# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_TYPE=sqlite
# For local development: sqlite
# For production: cosmosdb
SQLITE_DB_PATH=./data/ai-usage-tracking.db

# Cosmos DB Configuration (for production)
# COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
# COSMOS_KEY=your-cosmos-key
# COSMOS_DATABASE=ai-usage-tracking

# Azure OpenAI Configuration
AZURE_OPENAI_KEY=your-key-here
AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com/
AZURE_OPENAI_MODEL=gpt-4.1
AZURE_OPENAI_VISION_MODEL=gpt-4.1
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Application Configuration
MAX_REQUESTS_PER_USER=50
AUTHORIZED_USERIDS=A01234567,A01234568,A01234569

# CORS Configuration
FRONTEND_URL=http://localhost:5173
